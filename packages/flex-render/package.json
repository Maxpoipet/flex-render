{
  "name": "flex-render",
  "version": "0.1.2",
  "author": {
    "name": "Supakarn Laorattanakul",
    "url": "https://github.com/iamprompt"
  },
  "license": "MIT",
  "sideEffects": false,
  "type": "module",
  "main": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "files": [
    "dist/**"
  ],
  "exports": {
    "./css": "./dist/index.css",
    ".": {
      "import": "./dist/index.js",
      "require": "./dist/index.cjs",
      "types": "./dist/index.d.ts"
    },
    "./react": {
      "import": "./dist/components/react/FlexPreview.js",
      "require": "./dist/components/react/FlexPreview.cjs",
      "types": "./dist/components/react/FlexPreview.d.ts"
    }
  },
  "scripts": {
    "dev": "tsup --watch --dts --sourcemap --clean",
    "build": "tsup",
    "prepublish": "tsup",
    "clean": "rm -rf dist",
    "typecheck": "tsc --noEmit",
    "lint": "eslint src/"
  },
  "devDependencies": {
    "@iamprompt/eslint-config": "workspace:^",
    "@iamprompt/typescript-config": "workspace:^",
    "@line/bot-sdk": "^8.2.0",
    "@types/react": "^18.2.48",
    "esbuild-sass-plugin": "^3.0.0",
    "tsup": "^8.0.1"
  },
  "peerDependencies": {
    "typescript": "^5.0.0"
  },
  "publishConfig": {
    "registry": "https://npm.iamprompt.me/"
  },
  "dependencies": {
    "react": "^18.2.0"
  }
}
