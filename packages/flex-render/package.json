  "sideEffects": false,
  "type": "module",
  "exports": {
    "./css": "./dist/index.css",
    ".": {
      "import": "./dist/index.js",
      "require": "./dist/index.cjs",
      "types": "./dist/index.d.ts"
    },
    "./react": {
      "import": "./dist/components/react/FlexPreview.js",
      "require": "./dist/components/react/FlexPreview.cjs",
      "types": "./dist/components/react/FlexPreview.d.ts"
    },
    "./vue": {
      "import": "./dist/components/vue/FlexPreview.js",
      "require": "./dist/components/vue/FlexPreview.cjs",
      "types": "./dist/components/vue/FlexPreview.d.ts"
    }
  },
  "main": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "files": [
    "dist/**"
  ],
  "scripts": {
    "build": "tsup",
    "clean": "rm -rf dist",
    "dev": "tsup --watch --dts --sourcemap --clean",
    "lint": "eslint . --ext .js,.jsx,.ts,.tsx",
    "typecheck": "tsc --noEmit"
  },
  "devDependencies": {
    "@iamprompt/eslint-config": "workspace:^",
    "@iamprompt/typescript-config": "workspace:^",
    "@line/bot-sdk": "^8.2.0",
    "@types/react": "^18.2.48",
    "esbuild-sass-plugin": "^3.0.0",
    "tsup": "^8.0.1"
  },
  "peerDependencies": {
    "react": "^18.2.0",
    "typescript": "^5.0.0",
    "vue": "^3.4.15"
  },
  "publishConfig": {
    "access": "public"
  }
}
